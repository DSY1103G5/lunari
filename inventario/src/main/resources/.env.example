# Database Configuration (PostgreSQL/NeonDB)
DB_HOST=your-db.neon.tech
DB_PORT=5432
DB_NAME=lunari_inventory
DB_USER=your_username
DB_PASSWORD=your_password

# API Security - Two-tier API Key System
# Admin Key: Full access to all write operations (create, update, delete, stock management)
# Service Key: Limited access for service-to-service calls (reduce-stock endpoint only)
#
# Generate secure random keys with: openssl rand -hex 32
API_SECURITY_ENABLED=true
ADMIN_API_KEY=your-admin-key-here
SERVICE_API_KEY=your-service-key-here

